# Provider toggle (options: ollama, groq, gemini)
LLM_PROVIDER=gemini

# Semantic Scholar API (optional - increases rate limit from 1 to 10 req/sec)
# Get free key at: https://www.semanticscholar.org/product/api
S2_API_KEY=your_s2_api_key_here

# Groq (Fast)
GROQ_API_KEY=your_groq_key_here
GROQ_MODEL=llama3-8b-8192

# Gemini (Smart / Large Context)
GEMINI_API_KEY=your_gemini_key_here
GEMINI_MODEL=gemini-1.5-flash

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:8b

# Database (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password