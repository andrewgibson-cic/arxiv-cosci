# ArXiv AI Co-Scientist Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# Data Paths
# =============================================================================
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
MODELS_DIR=./data/models

# Kaggle dataset path (after downloading)
KAGGLE_METADATA_PATH=./data/raw/arxiv-metadata-oai-snapshot.json

# =============================================================================
# Neo4j Configuration
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# ChromaDB Configuration
# =============================================================================
CHROMA_PERSIST_DIR=./data/chromadb
CHROMA_COLLECTION_NAME=arxiv_papers

# =============================================================================
# Ollama Configuration
# =============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:8b

# =============================================================================
# Embedding Model
# =============================================================================
EMBEDDING_MODEL=all-mpnet-base-v2
EMBEDDING_DEVICE=mps  # Use 'mps' for Apple Silicon, 'cuda' for NVIDIA, 'cpu' otherwise

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # 'json' or 'console'

# =============================================================================
# Rate Limiting
# =============================================================================
ARXIV_RATE_LIMIT_SECONDS=3.0
MAX_CONCURRENT_DOWNLOADS=1

# =============================================================================
# Processing
# =============================================================================
BATCH_SIZE=100
MAX_WORKERS=4
