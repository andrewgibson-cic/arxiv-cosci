# Development Environment Configuration
# Copy this to .env for local development

# ============================================
# Database Configuration
# ============================================

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=development-password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=1800  # 30 minutes for development

# ============================================
# API Keys
# ============================================

# Gemini API (for LLM features)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Semantic Scholar API (optional, increases rate limit)
S2_API_KEY=your_s2_api_key_here

# Groq API (optional fallback)
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# LLM Configuration
# ============================================

# Provider: gemini, groq, or ollama
LLM_PROVIDER=gemini

# Ollama settings (if using local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ============================================
# Application Settings
# ============================================

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS (allow all in development)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================
# Batch Processing
# ============================================

BATCH_SIZE=50
MAX_CONCURRENT=5
CHECKPOINT_DIR=data/checkpoints
RETRY_ATTEMPTS=2

# ============================================
# Data Paths
# ============================================

DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=data/models
CHROMA_DIR=data/chroma

# ============================================
# Feature Flags
# ============================================

ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=false